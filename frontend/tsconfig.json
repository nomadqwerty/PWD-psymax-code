{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/questionnaire/filling/QuestionnaireTemplate.tsx",
    "pages/app/questionnaire/edit/index.tsx",
    "pages/app/questionnaire/questions.tsx"
  ],
  "exclude": ["node_modules"]
}
